<!-- Tailwind CSS Modal with Headless UI -->
<div id="dataModal" class="fixed inset-0 bg-black bg-opacity-50 z-[100] flex items-center justify-center hidden" style="display: none;">
    <div class="bg-white shadow-2xl overflow-hidden flex flex-col" style="width: 100vw !important; height: 100vh !important; max-width: none !important; border-radius: 0 !important;">
        <!-- Modal Header -->
        <div class="bg-gradient-to-r from-blue-600 to-blue-700 text-white px-6 py-4 flex items-center justify-between border-b border-blue-800">
            <h2 class="text-lg font-bold flex items-center gap-2" id="modalTitle">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8z"/>
                </svg>
                載入中...
            </h2>
            <div class="flex items-center gap-2">
                <button id="copyBtn" class="hidden px-3 py-1 bg-white text-blue-600 rounded hover:bg-blue-50 text-sm font-bold flex items-center gap-1 transition-colors" onclick="copyToClipboard()">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                    </svg>
                    複製程式碼
                </button>
                <button type="button" class="text-white hover:bg-blue-800 p-1 rounded transition-colors" onclick="closeModal()">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                </button>
            </div>
        </div>

        <!-- Modal Body -->
        <div id="modalBody" class="flex-1 bg-slate-50 flex flex-col min-h-0" style="overflow:hidden">
            <!-- Loading State -->
            <div id="loading" class="flex flex-col items-center justify-center h-64">
                <div class="animate-spin mb-4">
                    <svg class="w-12 h-12 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                    </svg>
                </div>
                <p class="text-blue-600 font-bold tracking-wide">系統正在處理大數據，請稍候...</p>
            </div>

            <!-- Table Content -->
            <div id="tableContent" class="flex-1 flex flex-col min-h-0 p-6" style="display:none">
                <!-- Badges + Search Bar -->
                <div id="totalRowsBadge" class="mb-3 flex flex-wrap gap-3 items-center justify-between"></div>

                <!-- Search Input -->
                <div id="previewSearchBar" class="mb-3 flex items-center gap-2" style="display:none">
                    <div class="relative flex-1 max-w-sm">
                        <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-4.35-4.35M17 11A6 6 0 1 1 5 11a6 6 0 0 1 12 0z"/>
                        </svg>
                        <input
                            id="previewSearchInput"
                            type="text"
                            placeholder="搜尋資料（所有欄位）..."
                            class="w-full pl-9 pr-8 py-2 border border-slate-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-400 bg-white"
                            oninput="previewSearch(this.value)"
                        />
                        <button type="button"
                            class="absolute right-2 top-1/2 -translate-y-1/2 text-slate-400 hover:text-slate-600"
                            onclick="previewSearch(''); document.getElementById('previewSearchInput').value='';"
                            title="清除搜尋">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                            </svg>
                        </button>
                    </div>
                    <span id="previewSearchCount" class="text-sm text-slate-500"></span>
                </div>

                <!-- Table Wrapper -->
                <div id="tableWrapper" class="overflow-auto rounded-lg border border-slate-200 shadow" style="max-height: calc(100vh - 280px)">
                    <table class="min-w-full text-sm dba-datatable" id="dataTable">
                        <thead class="bg-blue-600 text-white sticky top-0">
                            <tr id="dataHeader"></tr>
                        </thead>
                        <tbody class="divide-y divide-slate-200" id="dataBody"></tbody>
                    </table>
                </div>

                <!-- Pagination Controls -->
                <div id="previewPagination" class="mt-3 flex items-center justify-between flex-wrap gap-2" style="display:none">
                    <span id="previewPageInfo" class="text-sm text-slate-600"></span>
                    <div class="flex items-center gap-1">
                        <button type="button" id="previewBtnFirst"
                            class="px-2 py-1 rounded border border-slate-300 bg-white hover:bg-slate-50 text-slate-600 text-sm disabled:opacity-40 disabled:cursor-not-allowed"
                            onclick="previewGoPage(1)" title="第一頁">«</button>
                        <button type="button" id="previewBtnPrev"
                            class="px-3 py-1 rounded border border-slate-300 bg-white hover:bg-slate-50 text-slate-600 text-sm disabled:opacity-40 disabled:cursor-not-allowed"
                            onclick="previewGoPage(previewPage - 1)">上一頁</button>
                        <span id="previewPageBtns" class="flex items-center gap-1"></span>
                        <button type="button" id="previewBtnNext"
                            class="px-3 py-1 rounded border border-slate-300 bg-white hover:bg-slate-50 text-slate-600 text-sm disabled:opacity-40 disabled:cursor-not-allowed"
                            onclick="previewGoPage(previewPage + 1)">下一頁</button>
                        <button type="button" id="previewBtnLast"
                            class="px-2 py-1 rounded border border-slate-300 bg-white hover:bg-slate-50 text-slate-600 text-sm disabled:opacity-40 disabled:cursor-not-allowed"
                            onclick="previewGoPage(previewTotalPages())" title="最末頁">»</button>
                    </div>
                </div>
            </div>

            <!-- Source Code Content -->
            <div id="sourceContent" class="hidden w-full flex-1 flex flex-col min-h-0" style="min-height:0;">
                <div id="formatWarningArea" class="px-8 py-4 bg-amber-50 text-amber-800 border-b border-amber-200 hidden flex-shrink-0"></div>
                <pre id="sourceCodePre" class="flex-1 bg-slate-900 text-slate-100 p-6 md:p-10 font-mono text-[14px] overflow-y-auto" style="color: #f1f5f9; margin: 0; border: none; border-radius: 0; line-height: 1.6; min-height:0;"><code id="sourceCode" class="language-sql block whitespace-pre-wrap"></code></pre>
            </div>

            <!-- Database Object Content -->
            <div id="dbobjContent" class="hidden w-full flex-1 flex flex-col min-h-0 bg-slate-50">
                <!-- Data will be injected here via content.js (showObjectDetail) -->
            </div>

            <!-- Performance Monitor Content -->
            <div id="monitorContent" class="hidden w-full flex-1 overflow-auto bg-slate-50">
                <!-- Data will be injected here -->
            </div>
        </div>

        <!-- Modal Footer -->
        <div class="bg-white border-t border-slate-200 px-6 py-4 flex justify-end">
            <button type="button" class="px-5 py-2 bg-slate-800 hover:bg-slate-900 text-white rounded-full font-semibold text-sm flex items-center gap-2 transition-colors shadow" onclick="closeModal()">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                </svg>
                關閉視窗
            </button>
        </div>
    </div>
</div>

<script>
function getModal() {
    const modal = document.getElementById('dataModal');
    return {
        show: function() { modal.style.display = 'flex'; modal.classList.remove('hidden'); },
        hide: function() { modal.style.display = 'none'; modal.classList.add('hidden'); }
    };
}

function closeModal() {
    getModal().hide();
    document.body.style.overflow = '';
}
</script>
